<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentButton">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/get_random_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_image_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/testImageView"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:contentDescription="@string/lorem_ipsum"
        android:scaleType="centerInside"
        android:src="@drawable/test_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/get_random_image_button" />

</androidx.constraintlayout.widget.ConstraintLayout>